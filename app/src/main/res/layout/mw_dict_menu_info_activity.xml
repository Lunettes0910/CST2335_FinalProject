<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:rowCount="3"
    android:columnCount="2">

    <ImageButton
        android:id="@+id/ownerAvatar"
        android:src="@drawable/mw_dict_icons8_cat_profile_64"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp" />

        <TextView
            android:id="@+id/mwDictAuthorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:text="@string/mw_dict_author" />


        <TextView
            android:id="@+id/mwDictVersionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:text="@string/mw_dict_version" />

</LinearLayout>